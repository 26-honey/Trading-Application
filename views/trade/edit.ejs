<%- include('../partials/header.ejs')%>
<div class = "content">
    <form method="POST" action = "/trades/<%= trade.id%>?_method=PUT">
        <table>
            <tr>
                <td><label for="category" >category</label></td>
                <td><input type="text" id="category" name="category" value = "<%=trade.category%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="item_Name" >item_Name</label></td>
                <td><input type="text" id="item_Name" name="item_Name" value = "<%=trade.item_Name%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="designed_By" >designed_By</label></td>
                <td><input type="text" id="designed_By" name="designed_By" value = "<%=trade.designed_By%>" class = "fixed-width" required></td>
            </tr>
            <tr>
                <td><label for="manufactured_At" >manufactured_At</label></td>
                <td><input type="text" id="manufactured_At" name="manufactured_At" value = "<%=trade.manufactured_At%>" class = "fixed-width" required></td>
            </tr>
            <tr><td class = "align-top"><label for="details">details</label></td>
                <td><textarea rows="5" id="details" name="details" class = "fixed-width" required minlength="10"><%=trade.details%></textarea></td>
            </tr>
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>
            </table>        
    </form>
    </div>
    <%- include('../partials/footer.ejs')%>
